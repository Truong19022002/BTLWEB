    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="../LayoutLogin/css/util.css">
    <link rel="stylesheet" type="text/css" href="../LayoutLogin/css/main.css">
</head>
<body>

<div class="limiter">
	<div class="container-login100" style="background-image: url('../LayoutLogin/images/bg-01.jpg');">
		<div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                <span class="login100-form-title p-b-53">
                    Thêm tài khoản
                </span>
        <form asp-action="Themtaikhoan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group wrap-input100 validate-input">
                <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control input100" />
                        <span asp-validation-for="Username" class="text-danger focus-input100"></span>
            </div>
                    <div class="form-group wrap-input100 validate-input">
                <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control input100" />
                        <span asp-validation-for="Password" class="text-danger focus-input100"></span>
            </div>
                    <div class="form-group wrap-input100 validate-input">
                <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control input100" />
                        <span asp-validation-for="Email" class="text-danger focus-input100"></span>
            </div>
                    <div class="form-group wrap-input100 validate-input">
                <label asp-for="LoaiUser" class="control-label input100"></label>
                        <input asp-for="LoaiUser" class="form-control input100" />
                        <span asp-validation-for="LoaiUser" class="text-danger focus-input100"></span>
            </div>
                    <div class="form-group container-login100-form-btn m-t-17">
                        <input type="submit" value="Create" class="btn btn-default login100-form-btn" />
            </div>
            <div class="form-group container-login100-form-btn m-t-17">
                        <a asp-action="Login" class="login100-form-btn">LogIn</a>
            </div>
        </form>
    </div>         
</div>
</div>
</body>
</html>

