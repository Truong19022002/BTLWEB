@model List<Btaplon.Models.Cart.Cartitem>

<h2>Thông tin đơn hàng:</h2>

<table>
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.sanPham.TenSp</td>
                <td>@item.Quantity</td>
                <td>@item.sanPham.GiaBan</td>
                <td>@(item.Quantity * item.sanPham.GiaBan)</td>
            </tr>
        }
    </tbody>
</table>

<h2>Tổng tiền: @ViewBag.TotalPrice đ</h2>

<form method="post" action="/cart/Payment">
    <button type="submit">Thanh toán</button>
</form>